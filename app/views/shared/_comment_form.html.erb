<%= form_for(@comment) do |f| %>
  <%= render 'shared/error_messages', object: f.object %>
  <div class="field">
    <%= f.text_area :content, placeholder: "New comment" %>
    <%= f.hidden_field :episode_id, :value => @episode.id %>
    </div>
  <%= f.submit "Comment", class: "btn btn-large btn-primary" %>
<% end %>